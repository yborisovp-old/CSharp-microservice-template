{
    "$schema": "http://json.schemastore.org/template",
    "author": "yborisovp",
    "classifications": [
        "Web",
        "Microservice",
        "API",
        "ASP.NET Core",
        "Entity Framework"
    ],
    "identity": "CSharp.Microservice.Template",
    "name": "C# Microservice Template",
    "shortName": "microservice",
    "sourceName": "ServiceTemplate",
    "preferNameDirectory": true,
    "description": "A template for creating C# microservices with ASP.NET Core, Entity Framework Core, and clean architecture",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "symbols": {
        "ServiceName": {
            "type": "parameter",
            "description": "The name of the service",
            "datatype": "string",
            "replaces": "ServiceTemplate",
            "fileRename": "ServiceTemplate"
        },
        "RootNamespace": {
            "type": "parameter",
            "description": "The root namespace for the project",
            "datatype": "string",
            "defaultValue": "$(ServiceName)"
        },
        "TargetFramework": {
            "type": "parameter",
            "description": "The target framework for the project",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8.0"
                }
            ],
            "defaultValue": "net8.0",
            "replaces": "net8.0"
        },
        "DatabaseProvider": {
            "type": "parameter",
            "description": "The database provider to use",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "PostgreSQL",
                    "description": "Use PostgreSQL database"
                },
                {
                    "choice": "SQLServer",
                    "description": "Use SQL Server database"
                },
                {
                    "choice": "SQLite",
                    "description": "Use SQLite database"
                }
            ],
            "defaultValue": "PostgreSQL"
        },
        "EnableSwagger": {
            "type": "parameter",
            "description": "Enable Swagger/OpenAPI documentation",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "EnableDocker": {
            "type": "parameter",
            "description": "Include Docker support",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "EnableSerilog": {
            "type": "parameter",
            "description": "Enable Serilog logging",
            "datatype": "bool",
            "defaultValue": "true"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!EnableDocker)",
                    "exclude": [
                        "Dockerfile",
                        ".dockerignore"
                    ]
                },
                {
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**",
                        "**/.vs/**",
                        "**/.idea/**",
                        "**/.DS_Store"
                    ]
                }
            ]
        }
    ],
    "primaryOutputs": [
        {
            "path": "src/Host/Host.csproj"
        },
        {
            "path": "src/ServiceTemplate.DataAccess/ServiceTemplate.DataAccess.csproj"
        },
        {
            "path": "src/ServiceTemplate.DataContracts/ServiceTemplate.DataContracts.csproj"
        }
    ],
    "postActions": [
        {
            "description": "Restore and build the project",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore' to restore the project dependencies"
                },
                {
                    "text": "Run 'dotnet build' to build the project"
                }
            ],
            "actionId": "210D431B-A78C-4D1F-B762-3D87F2E0B71E",
            "args": {
                "executable": "dotnet",
                "args": "restore"
            },
            "continueOnError": true
        }
    ]
}
