{
  "Serilog": {
    "Using": [
      //"Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.fffzzz} [{Level:u3}] ({ThreadId}) {Message} (ActionId:{ActionId},RequestId:{RequestId}){NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "$(ServiceName)"
    }
  },
  "AllowedHosts": "*",

  // I suggest using environment variables. For example: BaseConfiguration__DatabaseConfig__DbUserName
  "BaseConfiguration": {
    "DatabaseConfig": {
      "DbUserName": "{{d_secret_user}}",
      "DbPassword": "{{d_secret_password}}",
      "DbConnection": "Host={{d_secret_server}};Database={{d_secret_database}};Port={{d_secret_port}}"
    },
    "SwaggerConfig": {
      "IsEnabled": true,
      "EndpointPrefix": ""
    }
  },
  "CorsConfiguration": {
    "Origins":  ["all"]
  }
}
